{
  "name": "unicode-segmenter",
  "version": "0.1.0",
  "type": "module",
  "description": "Pure JavaScript unicode segmentation library",
  "keywords": [
    "cjk",
    "unicode",
    "grapheme",
    "emoji"
  ],
  "exports": {
    "./grapheme": "./src/grapheme.js",
    "./intl-adapter": "./src/intl-adapter.js"
  },
  "sideEffects": [
    "./dist/intl-polyfill.js",
    "./dist/intl-polyfill.cjs"
  ],
  "publishConfig": {
    "exports": {
      "./grapheme": {
        "types": "./dist/grapheme.d.ts",
        "import": "./dist/grapheme.js",
        "require": "./dist/grapheme.cjs"
      },
      "./intl-adapter": {
        "types": "./dist/intl-adapter.d.ts",
        "import": "./dist/intl-adapter.js",
        "require": "./dist/intl-adapter.cjs"
      },
      "./intl-polyfill": {
        "types": "./dist/intl-polyfill.d.ts",
        "import": "./dist/intl-polyfill.js",
        "require": "./dist/intl-polyfill.cjs"
      },
      "./bundle/*": "./dist/bundle/*",
      "./package.json": "./package.json"
    }
  },
  "files": [
    "src",
    "dist",
    "licenses"
  ],
  "scripts": {
    "prepack": "yarn build",
    "build": "node scripts/build-exports.js && tsc -p tsconfig.build.json"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "esbuild": "^0.20.2",
    "grapheme-splitter": "1.0.4",
    "graphemer": "1.4.0",
    "pretty-bytes": "^6.1.1",
    "tinybench": "^2.6.0",
    "typescript": "^5.4.5"
  },
  "packageManager": "yarn@4.1.1"
}
